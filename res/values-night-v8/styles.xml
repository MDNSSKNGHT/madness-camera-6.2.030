<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CameraDialogButtonStyle" parent="@style/Widget.GoogleMaterial.TextButton.Dialog">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/settings_accent_color</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
    </style>
    <style name="CameraListPreferenceStyle" parent="@android:style/ThemeOverlay.Material.Dialog.Alert">
        <item name="android:textColor">@color/google_dark_blue500</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CameraDialogButtonStyle</item>
        <item name="colorAccent">@color/settings_accent_color</item>
    </style>
    <style name="SettingsTitleTextAppearance">
        <item name="android:textSize">22.0sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
    </style>
    <style name="Theme.CameraSettings" parent="@style/Theme.GoogleMaterial.DayNight.NoActionBar">
        <item name="android:textColorPrimary">@color/google_dark_blue500</item>
        <item name="android:textColorSecondary">@color/google_grey500</item>
        <item name="android:windowBackground">@color/google_grey900</item>
        <item name="android:preferenceCategoryStyle">@style/PreferenceCategoryStyle</item>
        <item name="android:preferenceStyle">@style/PreferenceStyle</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:tint">@android:color/white</item>
        <item name="android:divider">#1edadce0</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:alertDialogTheme">@style/CameraListPreferenceStyle</item>
        <item name="android:colorControlActivated">@color/settings_accent_color</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="colorPrimary">@color/google_grey900</item>
    </style>
    <style name="Theme.GoogleMaterial.DayNight.NoActionBar" parent="@style/Theme.GoogleMaterial.Dark.NoActionBar" />
</resources>
